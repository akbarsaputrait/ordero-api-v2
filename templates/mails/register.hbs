{{#extend "mail-layout"}}

  {{#content "content"}}
    <p>Dear {{name}},</p>
    <p>Thanks for signing up with kelola Asuransi</p>
    <p>To validate your email address, please click on the following link:</p>
    <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
      <tbody>
        <tr>
          <td align="left">
            <table role="presentation" border="0" cellpadding="0" cellspacing="0">
              <tbody>
                <tr>
                  <td>
                    <a href="{{link}}" target="_blank">Validate Account</a>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
    <p>If you have any problems, simply reply to this email and we'll get back to you as soon as we can.</p>
    <p>
      Cheers,<br /><br />
      The Kelola Asuransi Team<br />
    </p>
  {{/content}}

{{/extend}}
